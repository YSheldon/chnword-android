<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#649f835b"
        android:id="@+id/relativeLayout5">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/backImageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:src="@drawable/t_button_back"
            android:scaleType="fitXY"
            android:layout_margin="20dp"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView52"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:text="知识创富计划"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton13"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:src="@drawable/t_button_list"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton14"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:src="@drawable/t_button_share"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:layout_width="558dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView18"
                android:src="@drawable/vealth_tit"
                android:scaleType="fitXY"
                android:layout_margin="30dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了将科学高效的汉字学习方法分享给更多的学习者，让更多的人感受到汉子的魅力，奠基收益终身语文素养。"
            android:id="@+id/textView53"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们开展实施「只是创富计划」。"
            android:id="@+id/textView54"
            android:textSize="30dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即，您在做文化传播使者的同时，"
            android:id="@+id/textView55"
            android:textSize="30dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="足不出户，轻松获得丰厚薪酬！"
            android:id="@+id/textView56"
            android:textColor="#ff1c1e"
            android:textSize="30dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情请浏览中聿华源官网。"
            android:id="@+id/urlTextView"
            android:textSize="30dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:layout_width="700dp"
            android:layout_height="300dp"
            android:id="@+id/imageView19"
            android:src="@drawable/vealth_pic"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</LinearLayout>